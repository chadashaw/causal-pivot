{
  "name": "sim_runner",
  "title": "TCG Simulation Runner",
  "summary": "Runs Power Simulations",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "run_id",
      "label": "Run ID",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "simR",
      "label": "Simulation R Code",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "nsims",
      "label": "Num Sims",
      "class": "int",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "result_rds",
      "label": "Result RDS Dataframe",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "file": "src/sim_runner.sh",
    "distribution": "Ubuntu",
    "release": "24.04",
    "version": "0"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x36"
        }
      }
    }
  }
}
